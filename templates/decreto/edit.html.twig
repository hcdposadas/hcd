{% extends 'base.html.twig' %}

{% block title %}
    Decreto
{% endblock title %}
{% block body %}
    <h1>Editar Decreto</h1>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Decreto</h3>
        </div>
        <div class="card-body">

            {{ form_start(edit_form) }}
            {{ form_row(edit_form.tipoDecreto) }}
            {{ form_row(edit_form.expediente) }}
            {{ form_row(edit_form.cuerpo) }}
            {{ form_row(edit_form.activo) }}
            {{ form_row(edit_form.visible) }}
            <input class="btn btn-primary" type="submit" value="Guardar"/>
            <div class="d-none">
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('decreto_index') }}">Volver</a>



{% endblock %}
