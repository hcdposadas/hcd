{% extends 'base.html.twig' %}
{% block title %}
    Proyecto
{% endblock title %}
{% block body %}
    <div class="row">
        <div class="col-md-12 mb-3">
            <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Proyecto</h3>
                </div>
                <div class="card-body">
                    {% if (expediente.borrador == false or expediente.firmado) and (is_granted('ROLE_CONCEJAL') or is_granted('ROLE_DEFENSOR')) %}
                        {% if expediente.expediente %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="progress active">
                                        <div class="progress-bar progress-bar-success progress-bar-striped"
                                             role="progressbar" aria-valuenow="100" aria-valuemin="0"
                                             aria-valuemax="100"
                                             style="width: 100%">
                                            <span>100% Completo</span>
                                        </div>
                                    </div>
                                    <a class="btn btn-default" target="_blank"
                                       href="{{ path('expediente_imprimir_proyecto', {'id': expediente.id}) }}"><i
                                                class="fa fa-print"></i></a>
                                </div>
                            </div>
                        {% else %}
                            <div class="row">
                                <div class="col-md-12">
                                    {% set totalIniciadores = expediente.iniciadores.count %}
                                    {% set totalFirmas = expediente.firmasProyectos.count %}

                                    {% if totalIniciadores - totalFirmas > 0 %}
                                        <p class="text-info">
                                            Falta/n {{ totalIniciadores - totalFirmas }} Firma/s.
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                    <dl class="dl-horizontal">
                        <dt>Texto</dt>
                        <dd>{{ expediente.texto | raw }}</dd>
                    </dl>

                    <dl class="dl-horizontal">
                        <dt>Fecha</dt>
                        <dd>{% if expediente.fecha %}{{ expediente.fecha|date('d/m/Y') }}{% endif %}</dd>
                    </dl>

                    <dl class="dl-horizontal">
                        <dt>Firmas</dt>
                        <dd>
                            <ul>
                                {% for firma in expediente.firmasProyectos %}
                                <li>
                                    {{ firma.creadoPor.persona | title }}
                                </li>
                                {% endfor %}
                            </ul>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        {% if firmado %}
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        Proyecto firmado.
                    </div>
                </div>
            </div>
        {% else %}

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Descargar Proyecto</h3>
                            </div>
                            <div class="card-body">
                                Descargue el proyecto para firmarlo
                                <a class="btn btn-primary"
                                   href="{{ path('expediente_imprimir_proyecto', {'id': expediente.id}) }}"
                                   download="{{ expediente.id }}.pdf">Descargar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Subir Proyecto Firmado</h3>
                            </div>
                            {{ form_start(form) }}
                            <div class="card-body">
                                {{ form_widget(form.archivoFile) }}
                            </div>
                            <div class="card-footer">
                                <button class="btn btn-primary" type="submit">Subir</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
    <div class="row">
        {% if expediente.codigoReferencia and (is_granted('ROLE_CONCEJAL') or is_granted('ROLE_DEFENSOR')) %}
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Código</h3>
                    </div>
                    <div class="card-body">
                        <img class="img-responsive"
                             src="{{ qr_code_data_uri(expediente.codigoReferencia, { writer: 'png', logo_path: kernelProjectDir ~ '/public/uploads/sis_images/apple-touch-icon.png' , logo_width: 50 }) }}"/>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" download="{{ expediente.id }}.png"
                           href="{{ qr_code_data_uri(expediente.codigoReferencia, { writer: 'png' , logo_path: kernelProjectDir ~ '/public/uploads/sis_images/apple-touch-icon.png' , logo_width: 50 }) }}"><i
                                    class="fa fa-download"></i> Descargar Codigo</a>
                        <a class="btn btn-primary btn-enviar-mail"><i class="fa fa-envelope"></i> Enviar al mail</a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-md-12 mb-3">
            <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
        </div>
    </div>



{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.btn-enviar-mail').click(function () {

                modalAlert('<i class="fa fa-circle-o-notch fa-spin"></i> Enviando Mail');

                $.ajax({
                    type: 'post',
                    url: '{{ path('enviar_mail') }}',
                    data: {'expedienteId': {{ expediente.id }} },
                    success: function (data) {
                        $('#modal-alert .modal-body').html('<span class="text-green">Mail enviado correctamente</span>');

                    },
                    error: function (data) {
                        console.error('mail', data);
                        $('#modal-alert .modal-body').html('<span class="text-red">Ocurrió un error al enviar el mail</span>');
                    }
                });
            })
        });
    </script>
{% endblock javascripts %}
