{% extends 'base.html.twig' %}
{% block title %}
    Asignar Nº Expte
{% endblock title %}
{% block body %}

    <div class="row">
        <div class="col-md-12">
            <div class="card collapsed-card">
                <div class="card-header">
                    <h3 class="card-title">Filtros</h3>
                    <div class="card-tools pull-right">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i
                                    class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(filter_type) }}
                    <div class="row">
                        <div class="col-md-6">
                            {# {{ form_row(filter_type.tipoExpediente) }} #}
                            {{ form_row(filter_type.textoDefinitivo) }}
                            {{ form_row(filter_type.extracto) }}
                            {{ form_row(filter_type.expediente) }}
                            {{ form_row(filter_type.anio) }}
                            {{ form_row(filter_type.texto) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(filter_type.letra) }}
                            {{ form_row(filter_type.fecha) }}
                            {{ form_row(filter_type.registroMunicipal) }}
                            {{ form_row(filter_type.iniciador) }}
                            {{ form_row(filter_type.iniciadorParticular) }}
                            {{ form_row(filter_type.dependencia) }}
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    {{ form_widget(filter_type.buscar) }}
                    {{ form_widget(filter_type.limpiar) }}
                </div>
                {{ form_end(filter_type) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Proyectos</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped data-table">
                        <thead>
                        <tr>
                            <th>Id</th>
{#                            <th>Expediente</th>#}
{#                            <th>Letra</th>#}
                            <th>Año</th>
                            <th>Fecha</th>
{#                            <th>Registro municipal</th>#}
                            <th>Iniciador</th>
                            <th>Acción</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for proyecto in proyectos %}
                            <tr>
                                <td>
                                    <a href="{{ path('expediente_show', { 'id': proyecto.id }) }}">{{ proyecto.id }}</a>
                                </td>
{#                                <td>{{ proyecto.expediente }}</td>#}
{#                                <td>{{ proyecto.letra }}</td>#}
                                <td>{% if proyecto.anio %}{{ proyecto.anio }}{% else %} {{ proyecto.periodoLegislativo }} {% endif %}</td>
                                <td>{% if proyecto.fecha %}{{ proyecto.fecha|date('d/m/Y') }}{% endif %}</td>
{#                                <td>{{ proyecto.registroMunicipal }}</td>#}
                                <td>
                                    {% if proyecto.iniciadores.count > 0 %}
                                        {% for iniciadorExpediente in proyecto.iniciadores %}
                                            {% if iniciadorExpediente.iniciador %}
                                                {{ iniciadorExpediente.iniciador.cargoPersona }} -
                                            {% endif %}
                                        {% endfor %}
                                    {% elseif proyecto.iniciadorParticular %}
                                        {{ proyecto.iniciadorParticular.nombreCompleto }}
                                    {% elseif proyecto.dependencia %}
                                        {{ proyecto.dependencia }}
                                    {% endif %}
                                </td>

                                <td>
                                    {% if is_granted('ROLE_MESA_ENTRADA') %}
                                        <a class="btn btn-default"
                                           href="{{ path('expediente_legislativo_externo_editar', { 'id': proyecto.id }) }}">
                                            <i class="fas fa-signature"></i>
                                        </a>
                                    {% endif %}
                                    <a class="btn btn-default"
                                       href="{{ path('expediente_timeline', {id: proyecto.id}) }}">
                                        <i class="fa fa-road"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {# display navigation #}
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="navigation">
                {{ knp_pagination_render(proyectos) }}
            </div>
        </div>
    </div>

{% endblock %}

