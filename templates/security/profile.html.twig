{% extends 'base.html.twig' %}

{% block title %}
    Perfil
{% endblock title %}
{% block body %}


    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ app.user.persona }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.passwordPlano) }}
                    <input class="btn btn-primary" type="submit" value="Guardar"/>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}