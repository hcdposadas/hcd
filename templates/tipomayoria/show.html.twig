            <tr>
                <th>Fechaactualizacion</th>
                <td>{% if tipoMayorium.fechaActualizacion %}{{ tipoMayorium.fechaActualizacion|date('d/m/Y H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>


<a class="btn btn-default" href="{{ path('tipomayoria_index') }}">Volver</a>

    <a class="btn btn-default" href="{{ path('tipomayoria_edit', { 'id': tipoMayorium.id }) }}">Editar</a>

    {{ form_start(delete_form) }}
