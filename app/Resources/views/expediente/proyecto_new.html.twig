{% extends 'base.html.twig' %}
{% block title %}
    Proyecto
{% endblock title %}
{% block body %}

    <h1>Nuevo Proyecto</h1>
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Proyecto</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.tipoProyecto) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.fecha) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <p class="help-block">Si el proyeto tuviera acompañantes, debe agregarlos aquí abajo.</p>
                    {{ form_row(form.iniciadores) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.texto) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_row(form.anexos) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    {{ form_widget(form.guardar) }}
                    {{ form_widget(form.guardarYEnviar) }}
                </div>
            </div>


            <div class="hidden">
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a class="btn btn-default" href="{{ path('proyectos_index') }}">Volver</a>
{% endblock %}
{% block javascripts %}
    <script>
        var submitConfirm = false;
        $(document).ready(function () {
            $('.tipo-proyecto').change(function () {
                var tipoId = $(this).val();

                $.ajax({
                    type: 'get',
                    url: '{{ path("get_tipos_proyectos") }}',
                    data: {id: tipoId},
                    success: function (data) {
                        console.log('data', data);
                        CKEDITOR.instances.{{ form.texto.vars.id }}.setData(data);

                    }
                });
            });
            $('form[name="{{ form.vars.name }}"]').submit(function (event) {

                if (event.originalEvent.explicitOriginalTarget.firstChild.data == 'Guardar') {
                    return true;
                }

                if (submitConfirm) {
                    console.log('confirmo');
                    // return true;
                } else {
                    console.log('no confirmo');
                    event.preventDefault();
                    if (event.originalEvent.explicitOriginalTarget.firstChild.data == 'Guardar y enviar') {
                        modalConfirm('¿Está seguro?', '<p>¿Realmente desea enviar el proyecto a Mesa de Entrada? <br> Esta acción es irreversible.</p>');
                    }
                }
            });

            $('#modal-confirm-btn-ok').click(function () {
                submitConfirm = true;
                $(this).addClass('disabled');
                $(this).html('<i class="fa fa-circle-o-notch fa-spin"></i> Enviando');
                $('.btn-guardar-enviar').trigger('click');
            })
        });
    </script>

{% endblock javascripts %}
