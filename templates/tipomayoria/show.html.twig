{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tipo Mayor√≠a</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tipoMayorium.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tipoMayorium.nombre }}</td>
            </tr>
